<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetaliActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/Order_detail_total"
        android:id="@+id/Order_detail_rv"/>

    <TextView
        android:id="@+id/order_detail_total1"
        android:layout_width="0dp"
        android:padding="@dimen/dimen_10dp"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="@dimen/dimen_20dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/Order_detail_total"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/order_detail_total1"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>